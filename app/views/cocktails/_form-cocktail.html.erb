<%= simple_form_for(cocktail, remote: true) do |f| %>
  <%= f.input :name, placeholder: "Cuba Libre" %>
  <%= f.input :stars, collection: 1..5 %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="form-action">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

